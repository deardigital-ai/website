    "validate:commits": "gh workflow run commit-validation.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deardigital-ai/website.git"
  },
  "keywords": [
    "github-actions",
    "automation",
    "ai",
    "discussions",
    "issues"
  ],
