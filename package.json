{
  "name": "website",
  "version": "1.0.0",
  "description": "Repository for Dear Digital website with GitHub Actions",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:workflow-content && npm run test:github-api",
    "test:workflow-content": "node tests/workflow-content-tests.js",
    "test:github-api": "node tests/github-api-tests.js",
    "lint:workflows": "yamllint .github/workflows/*.yml",
